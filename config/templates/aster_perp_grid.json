{
  "metadata": {
    "name": "Aster 永續網格模板",
    "description": "Aster 交易所永續合約網格交易策略模板，適合 BTC/USDT 等主流交易對",
    "exchange": "aster",
    "symbol": "BTCUSDT",
    "market_type": "perp",
    "strategy": "perp_grid",
    "created_at": "2025-11-26T16:00:00Z",
    "updated_at": "2025-11-26T16:00:00Z",
    "version": "1.0.0",
    "author": "Backpack-MM-Simple",
    "tags": ["aster", "perpetual", "grid", "template"]
  },
  "daemon_config": {
    "python_path": ".venv/bin/python3",
    "script_path": "run.py",
    "working_dir": ".",
    "log_dir": "logs",
    "max_restart_attempts": 3,
    "restart_delay": 60,
    "health_check_interval": 30,
    "memory_limit_mb": 2048,
    "cpu_limit_percent": 80,
    "auto_restart": true,
    "log_cleanup_interval": 86400,
    "log_retention_days": 2
  },
  "exchange_config": {
    "api_key": "${ASTER_API_KEY}",
    "secret_key": "${ASTER_SECRET_KEY}",
    "base_url": "${ASTER_BASE_URL:-https://api.aster.exchange}"
  },
  "strategy_config": {
    "grid_upper_price": 50000,
    "grid_lower_price": 45000,
    "grid_num": 30,
    "grid_mode": "geometric",
    "grid_type": "neutral",
    "max_position": 0.5,
    "stop_loss": 500,
    "take_profit": 1000,
    "boundary_action": "emergency_close",
    "boundary_tolerance": 0.001,
    "enable_boundary_check": true,
    "duration": 1209600,
    "interval": 90
  }
}